@model IEnumerable<LaburMarketObservatoryMVC5.Models.AspNetRole>

@{
    ViewBag.Title = "انماط المستخدمين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ادارة انماط المستخدمين</h2>

<p>
    @Html.ActionLink("اضافة نمط جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("حذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
