@model IEnumerable<LaburMarketObservatoryMVC5.Models.Feedback>

@{
    ViewBag.Title = "المحتوى";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>اقتراحات لتحسين المرصد</h2>

<p>
    @Html.ActionLink("اضافة اقتراح", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.feedback_text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.feedback_text)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.feedback_id }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.feedback_id }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.feedback_id })
        </td>
    </tr>
}

</table>
